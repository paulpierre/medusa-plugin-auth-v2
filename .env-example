# Database Configuration
DATABASE_TYPE=postgres
DATABASE_URL=postgres://postgres:postgres@postgres:5432/medusa-docker
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret
COOKIE_SECRET=your_cookie_secret

# Medusa Configuration
MEDUSA_ADMIN_ONBOARDING_TYPE=default
STORE_CORS=http://localhost:8000,http://frontend:8000
ADMIN_CORS=http://localhost:7000

# Base URLs
STORE_URL=http://localhost:8000
BACKEND_URL=http://localhost:9000
ADMIN_URL=http://localhost:7000

# Google OAuth2 credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:9000/store/auth/google/callback

# Facebook OAuth2 credentials
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_CALLBACK_URL=http://localhost:9000/auth/facebook/callback

# GitHub OAuth2 credentials
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:9000/auth/github/callback

# Auth Plugin Configuration
AUTH_ADMIN_CALLBACK_URL=${ADMIN_URL}/auth/callback
AUTH_STORE_CALLBACK_URL=${STORE_URL}/callback

# Server Configuration
BACKEND_PORT=9000
NODE_ENV=development

# Frontend Configuration
FRONTEND_PORT=8000
FRONTEND_URL=http://localhost:8000

# NPM Configuration for legacy dependencies
NPM_CONFIG_LEGACY_PEER_DEPS=true

# Log Level
LOG_LEVEL=debug

# PostgreSQL Configuration
PGHOST=postgres
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=medusa-docker
